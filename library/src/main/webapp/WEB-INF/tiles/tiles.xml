<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE tiles-definitions PUBLIC
           "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
           "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
    <tiles-definitions>

        <!-- Templates -->

        <definition name="layout-tiles" template="/WEB-INF/tiles/layouts/Classic.jsp">
            <put-attribute name="header" value="/WEB-INF/tiles/components/Header.jsp" />
            <put-attribute name="content" value="" />
            <put-attribute name="footer" value="/WEB-INF/tiles/components/Footer.jsp" />
        </definition>

        <!-- Pages -->  

        <definition name="*/*" extends="layout-tiles">
            <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
        </definition>

    </tiles-definitions>
